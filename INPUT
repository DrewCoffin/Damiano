dtwrite_fw=4.0		! full write dt
tmax=800.0		! maximum simulation time in seconds
iparticle_write=1       ! write out particle data (0-off, 1-on)
RESTART=.FALSE.         ! Restart run from previous time dump (TRUE/FALSE)
